---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Site officiel de l'auteure, compositrice, interprète Margaux Mia.">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content="Margaux Mia">
		<meta name="description" content="Site officiel de l'auteure, compositrice, interprète Margaux Mia.">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://margaux-mia.netlify.app/">
		<meta property="og:title" content="Margaux Mia">
		<meta property="og:description" content="Site officiel de l'auteure, compositrice, interprète Margaux Mia.">
		<meta property="og:image" content="https://margaux-mia.netlify.app/social.jpg">

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content="https://margaux-mia.netlify.app/">
		<meta property="twitter:title" content="Margaux Mia">
		<meta property="twitter:description" content="Site officiel de l'auteure, compositrice, interprète Margaux Mia.">
		<meta property="twitter:image" content="https://margaux-mia.netlify.app/social.jpg">
	</head>
	<body>
		<slot />
	</body>
</html>
